{
  "name": "simple-graphql-assembler",
  "version": "0.0.1",
  "description": "Simple backend graphql shcema assembler for apollo projects",
  "author": "Metál Ádám <devmetal91@gmail.com> (https://github.com/devmetal)",
  "repository": {
    "type": "git",
    "url": "https://github.com/devmetal/simple-graphql-assembler.git"
  },
  "license": "MIT",
  "keywords": [
    "apollo",
    "graphql",
    "shcema"
  ],
  "main": "index.js",
  "files": [
    "index.js",
    "package.lock",
    "/lib",
    "!examples/",
    "!**/__fixtures__/",
    "!**/__mocks__/",
    "!**/__tests__/"
  ],
  "scripts": {
    "test": "jest --env=node",
    "lint": "eslint lib/ example/",
    "ci": "npm run lint && npm run test",
    "husky": "husky-upgrade"
  },
  "devDependencies": {
    "apollo-server": "^2.3.1",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "shortid": "^2.2.14"
  },
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js}",
      "!**/node_modules/**",
      "!coverage/**",
      "!example/**",
      "!jest-setup.js"
    ],
    "coverageDirectory": "coverage",
    "setupTestFrameworkScriptFile": "./jest-setup.js"
  }
}
